*{margin: 0;padding: 0;border: 0}

html,body{width:100%;height:100%;background: url(../img/bg3.jpg)  no-repeat; background-size:100% 100%;overflow: hidden;text-align: center;}

.content{background:url(../img/xmas.png) no-repeat;background-size:100% 100%;
	width:320px;margin-left:auto;margin-right:auto;height:489px;
	overflow: hidden;margin-top: 2%
	
}

.flash-ele{background-size:100% 100%;
	width:320px;margin-left:auto;margin-right:auto;height:489px;
	position: relative;}



@-webkit-keyframes fadeIn {
0% {
opacity: 0; /*初始状态 透明度为0*/
}
50% {
opacity: 0; /*中间状态 透明度为0*/
}
100% {
opacity: 1; /*结尾状态 透明度为1*/
}
}

.content img{-webkit-animation-name: fadeIn; /*动画名称*/-webkit-animation-iteration-count: 1; /*动画次数*/
}
.content img:nth-child(1){-webkit-animation-duration: 2s; /*动画持续时间*/-webkit-animation-delay: 0s; /*延迟时间*/}
.content img:nth-child(2){-webkit-animation-duration: 4s; /*动画持续时间*/-webkit-animation-delay: 0s; /*延迟时间*/}
.content img:nth-child(3){-webkit-animation-duration: 6s; /*动画持续时间*/-webkit-animation-delay: 0s; /*延迟时间*/}
.content img:nth-child(4){-webkit-animation-duration: 8s; /*动画持续时间*/-webkit-animation-delay: 0s; /*延迟时间*/}
.content img:nth-child(5){-webkit-animation-duration: 10s; /*动画持续时间*/-webkit-animation-delay: 0s; /*延迟时间*/}
#xmas-btn{-webkit-animation-duration: 12s; /*动画持续时间*/-webkit-animation-delay: 0s; /*延迟时间*/}





.success{background:url(../img/tip1.png) no-repeat;background-size:contain;
	width:320px;margin-left:auto;margin-right:auto;height: 367px;margin-top: 10%;
	display: none;position:absolute;z-index: 100;
}